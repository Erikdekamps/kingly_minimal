{#
/**
 * @file
 * Component template for footer utility links.
 *
 * @see kingly_minimal/components/footer-utility-links/footer-utility-links.component.yml
 *
 * @props
 * - links: An array of link objects, each with 'text' and 'url'.
 * - show_theme_toggle: Boolean to control if the theme toggle is displayed.
 * - attributes: A Drupal attributes object for the wrapper.
 */
#}
<div{{ attributes.addClass('footer-utility-links') }}>
  {% if links %}
    <ul class="footer-utility-links__list">
      {% for link in links %}
        <li class="footer-utility-links__item">
          <a href="{{ link.url }}" class="footer-utility-links__link">{{ link.text }}</a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if show_theme_toggle %}
    <div class="footer-utility-links__toggle">
      {{ include('kingly_minimal:theme-toggle', with_context=false) }}
    </div>
  {% endif %}
</div>
