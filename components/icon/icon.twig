{# Select the requested icon from the library. #}
{% set selected_icon = icon_library[name] %}

{# Set a default accessible label if one isn't provided. #}
{% set accessible_label = label|default(name|capitalize) %}

{% if selected_icon %}
  <span{{ attributes.addClass('icon', 'icon--' ~ name) }}>
    <span class="visually-hidden">{{ accessible_label }}</span>
    {{- selected_icon|raw -}}
  </span>
{% endif %}
