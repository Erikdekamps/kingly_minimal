{#
/**
 * @file
 * Component template for local task tabs.
 *
 * @see kingly_minimal/components/local-tasks/local-tasks.component.yml
 *
 * @props
 * - primary: (Object) Render array of primary task <li> elements.
 * - secondary: (Object) Render array of secondary task <li> elements.
 * - attributes: (Object) HTML attributes for the main wrapper.
 */
#}
{% if primary or secondary %}
  <div{{ attributes.addClass('local-tasks') }}>
    {% if primary %}
      <nav class="local-tasks__primary" role="navigation" aria-labelledby="primary-tabs-title">
        {# Use the heading component for the visually hidden heading. #}
        {{ include('kingly_minimal:heading', {
          text: 'Primary tabs'|t,
          level: 'h2',
          attributes: create_attribute().addClass('visually-hidden').setAttribute('id', 'primary-tabs-title')
        }, with_context = false) }}

        <ul class="tabs tabs--primary">
          {{ primary }}
        </ul>
      </nav>
    {% endif %}

    {% if secondary %}
      <nav class="local-tasks__secondary" role="navigation" aria-labelledby="secondary-tabs-title">
        {# Use the heading component for the visually hidden heading. #}
        {{ include('kingly_minimal:heading', {
          text: 'Secondary tabs'|t,
          level: 'h2',
          attributes: create_attribute().addClass('visually-hidden').setAttribute('id', 'secondary-tabs-title')
        }, with_context = false) }}

        <ul class="tabs tabs--secondary">
          {{ secondary }}
        </ul>
      </nav>
    {% endif %}
  </div>
{% endif %}
