{#
/**
 * @file
 * Component template for a menu.
 *
 * This component uses a macro to recursively render a nested list of menu items.
 *
 * @see kingly_minimal/components/menu/menu.component.yml
 *
 * @props
 * - items: A nested list of menu items.
 * - menu_level: The current depth of the menu.
 * - attributes: A Drupal attributes object for the root <ul> element.
 */
#}
{% import _self as menus %}

{#
We call a macro which calls itself to render the full tree.
@see https://twig.symfony.com/doc/3.x/tags/macro.html
#}
{{ menus.menu_links(items, attributes, menu_level) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('menu', 'menu--level-' ~ menu_level) }}>
    {% else %}
      <ul class="menu__sub-menu menu--level-{{ menu_level }}">
    {% endif %}
    {% for item in items %}
      {% set item_classes = [
        'menu__item',
        'menu__item--level-' ~ menu_level,
        item.is_expanded ? 'menu__item--expanded',
        item.is_collapsed ? 'menu__item--collapsed',
        item.in_active_trail ? 'menu__item--active-trail',
      ] %}
      <li{{ item.attributes.addClass(item_classes) }}>
        {% set link_classes = [
          'menu__link',
          'menu__link--level-' ~ menu_level,
          item.in_active_trail ? 'is-active',
        ] %}
        {#
        WCAG AAA (2.4.8 Location): Add 'aria-current="page"' to the active link
        to programmatically identify the user's current location.
        #}
        {% set link_attributes = item.in_active_trail ? create_attribute({'aria-current': 'page'}) : create_attribute() %}
        {{ link(item.title, item.url, link_attributes.addClass(link_classes)) }}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
