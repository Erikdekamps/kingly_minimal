{#
/**
 * @file
 * Component template for a single search result.
 *
 * @see kingly_minimal/components/search-result/search-result.component.yml
 *
 * @props
 * - url: (String) The URL of the search result.
 * - title: (String) The title of the search result.
 * - snippet: (Object) A snippet of the search result content.
 * - info: (Object) Additional information about the search result.
 * - attributes: (Object) A Drupal attributes object for the root element.
 */
#}
<article{{ attributes.addClass('search-result') }}>
  {% if title %}
    {# Delegate rendering of the linked title to our Heading component. #}
    {{ include('kingly_minimal:heading', {
      text: title,
      level: 'h3',
      display: 'h4',
      url: url,
      attributes: create_attribute().addClass('search-result__title')
    }, with_context = false) }}
  {% endif %}

  {% if info %}
    <div class="search-result__info">
      {{ info }}
    </div>
  {% endif %}

  {% if snippet %}
    <div class="search-result__snippet">
      {{ snippet }}
    </div>
  {% endif %}
</article>
