{#
/**
 * @file
 * Component template for status messages.
 *
 * Displays status, error, and warning messages, grouped by type.
 *
 * @see kingly_minimal/components/status-messages/status-messages.component.yml
 *
 * Available variables (from props):
 * - message_list: A list of messages to be displayed, grouped by type.
 * - status_headings: An array of message headings for each message type.
 * - attributes: HTML attributes for the wrapper element.
 */
#}
{% for type, messages in message_list %}
  {% set classes = [
    'messages',
    'messages--' ~ type,
  ] %}
  <div role="{{ type == 'status' ? 'status' : 'alert' }}"{{ attributes.addClass(classes) }}>
    {% if status_headings[type] %}
      <h2 class="visually-hidden">{{ status_headings[type] }}</h2>
    {% endif %}
    {% if messages|length > 1 %}
      <ul class="messages__list">
        {% for message in messages %}
          <li class="messages__item">{{ message }}</li>
        {% endfor %}
      </ul>
    {% else %}
      {{ messages|first }}
    {% endif %}
  </div>
{% endfor %}
