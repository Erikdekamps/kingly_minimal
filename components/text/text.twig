{#
/**
 * @file
 * Component template for styled "prose" text.
 *
 * @see kingly_minimal/components/text/text.component.yml
 *
 * @props
 * - content: (String|Object) The rich text or HTML content to be styled.
 * - element: (String) The HTML tag for the root element, defaults to 'div'.
 * - attributes: (Object) A Drupal attributes object for the root element.
 */
#}
<{{ element|default('div') }}{{ attributes.addClass('prose') }}>
{{- content -}}
</{{ element|default('div') }}>
