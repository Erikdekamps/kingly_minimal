{#
/**
 * @file
 * Theme override for a single comment.
 *
 * This template now acts as a bridge to the 'comment' Single Directory
 * Component. It maps the variables from the theme system to the component,
 * which now handles all markup and styling.
 *
 * @see kingly_minimal/components/comment/comment.twig
 */
#}
{%
  set comment_classes = [
  'comment--type-' ~ comment.bundle|clean_class,
  new ? 'comment--new',
  'by-node-author--' ~ (author.id() == node.getOwnerId() ? 'yes' : 'no'),
  'by-viewer--' ~ (author.id() == logged_in_user.id() ? 'yes' : 'no'),
]
%}
{{ include('kingly_minimal:comment', {
  author_picture: author_picture,
  author_name: author,
  created_date: created,
  permalink: permalink,
  is_new: new,
  new_text: 'new'|t,
  content: content,
  title: title,
  title_prefix: title_prefix,
  title_suffix: title_suffix,
  attributes: attributes.addClass(comment_classes),
}, with_context = false) }}
