{#
/**
 * @file
 * Theme override for page titles.
 *
 * This template acts as a bridge to the 'page-title' Single Directory Component.
 * It passes the necessary variables from the theme system to the component.
 *
 * @see kingly_minimal/components/page-title/page-title.twig
 */
#}
{{ title_prefix }}
{% if title %}
  {{ include('kingly_minimal:page-title', {
    title: title,
    attributes: title_attributes,
  }, with_context = false) }}
{% endif %}
{{ title_suffix }}
