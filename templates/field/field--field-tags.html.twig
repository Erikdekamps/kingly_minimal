{#
/**
 * @file
 * Theme override for the 'field_tags' field.
 *
 * This template acts as a bridge to the 'field-tags' Single Directory
 * Component. It intercepts the rendering of any field named 'field_tags' and
 * delegates the output to our reusable component, passing the necessary
 * variables as props.
 *
 * @see kingly_minimal/components/field-tags/field-tags.twig
 */
#}
{% if not label_hidden %}
  {# If the label is not hidden, we display it using its own attributes. #}
  {# The 'field__label' class is a common convention for styling. #}
  <div{{ title_attributes.addClass('field__label') }}>{{ label }}</div>
{% endif %}

{#
Here we include our SDC.
- The `items` array from the field is passed directly to the component's `items` prop.
- The field's `attributes` are passed to the component's `attributes` prop.
#}
{{ include('kingly_minimal:field-tags', {
  items: items,
  attributes: attributes,
}, with_context = false) }}
