{#
/**
 * @file
 * Theme override for a field.
 *
 * This template has been refactored to act as a bridge to the generic `field`
 * Single Directory Component. It maps the variables from the theme system to
 * the props expected by the component.
 *
 * This provides a consistent wrapper for all fields that do not have a more
 * specific override (e.g., field--field-tags.html.twig).
 *
 * @see kingly_minimal/components/field/field.twig
 */
#}
{%
  set field_classes = [
  'field',
  'field--name-' ~ field_name|clean_class,
  'field--type-' ~ field_type|clean_class,
  'field--label-' ~ label_display,
]
%}
{%
  set field_title_attributes = title_attributes.addClass(
  label_display == 'visually_hidden' ? 'visually-hidden'
)
%}

{{ include('kingly_minimal:field', {
  label_hidden: label_hidden,
  label: label,
  title_attributes: field_title_attributes,
  items: items,
  multiple: multiple,
  attributes: attributes.addClass(field_classes),
}, with_context = false) }}
