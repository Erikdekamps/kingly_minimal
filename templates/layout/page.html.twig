{#
/**
 * @file
 * Theme override to display a single page.
 *
 * This template has been updated for a more robust CSS grid layout and a new
 * modular footer structure based on Single Directory Components.
 */
#}
<div class="layout-container">

  {# This wrapper groups the header and breadcrumbs. It will be styled as a
     full-width subgrid in page.scss to ensure correct alignment. #}
  <div class="page-header-wrapper">
    <header class="page-header" role="banner">
      {% if page.branding %}
        <div class="page-header__branding">
          {{ page.branding }}
        </div>
      {% endif %}
      {% if page.main_navigation %}
        <div class="page-header__menu">
          {{ page.main_navigation }}
        </div>
      {% endif %}
    </header>

    {% if page.breadcrumbs %}
      <div class="region-breadcrumbs">
        {{ page.breadcrumbs }}
      </div>
    {% endif %}
  </div>

  <main id="main-content" class="main-content" role="main">
    {# A skip-link target for accessibility. #}
    <a id="main-content-target" tabindex="-1"></a>

    {% if page.page_title %}
      {# The page title is a direct child of the main-content grid. #}
      {{ page.page_title }}
    {% endif %}

    {% if page.system_messages %}
      <div class="main-content__region system-messages-region">
        {{ page.system_messages }}
      </div>
    {% endif %}

    {% if page.tabs %}
      <div class="main-content__region tabs-region">
        {{ page.tabs }}
      </div>
    {% endif %}

    {% if page.content_top %}
      <div class="main-content__region content-top-region">
        {{ page.content_top }}
      </div>
    {% endif %}

    {# The main content from Drupal (e.g., node content). #}
    <div class="main-content__region content-main-region">
      {{ page.content }}
    </div>

    {% if page.content_bottom %}
      <div class="main-content__region content-bottom-region">
        {{ page.content_bottom }}
      </div>
    {% endif %}
  </main>

  {# Begin Footer Section #}
  <footer class="page-footer" role="contentinfo">
    <div class="page-footer__inner">

      <div class="page-footer__top">
        <div class="footer-top-left">
          {{ page.footer_top_left ? page.footer_top_left : include('kingly_minimal:footer-social-prompt', {
            text: 'Get connected with us on social networks:'
          }) }}
        </div>
        <div class="footer-top-right">
          {{ page.footer_top_right ? page.footer_top_right : include('kingly_minimal:social-links', {
            links: [
              { url: 'https://www.facebook.com', text: 'Facebook' },
              { url: 'https://www.twitter.com', text: 'Twitter' },
              { url: 'https://www.linkedin.com', text: 'LinkedIn' },
              { url: 'https://www.instagram.com', text: 'Instagram' }
            ]
          }) }}
        </div>
      </div>

      <div class="page-footer__columns">
        <div class="page-footer__column footer-first">
          {{ page.footer_first ? page.footer_first : include('kingly_minimal:footer-company-info', {
            company_name: 'Company Name',
            description: 'Here you can use rows and columns to organize your footer content. Lorem ipsum dolor sit amet, consectetur adipisicing elit.'
          }) }}
        </div>

        <div class="page-footer__column footer-second">
          {{ page.footer_second ? page.footer_second : include('kingly_minimal:footer-link-list', {
            title: 'Products',
            links: [
              { text: 'Product 1', url: '#' },
              { text: 'Product 2', url: '#' },
              { text: 'Product 3', url: '#' }
            ]
          }) }}
        </div>

        <div class="page-footer__column footer-third">
          {{ page.footer_third ? page.footer_third : include('kingly_minimal:footer-link-list', {
            title: 'Useful links',
            links: [
              { text: 'Pricing', url: '#' },
              { text: 'Settings', url: '#' },
              { text: 'Orders', url: '#' },
              { text: 'Help', url: '#' }
            ]
          }) }}
        </div>

        <div class="page-footer__column footer-fourth">
          {{ page.footer_fourth ? page.footer_fourth : include('kingly_minimal:footer-contact', {
            title: 'Contact',
            address: 'Dummy address',
            email: 'info@example.com',
            phone: '+ 01 234 567 89'
          }) }}
        </div>
      </div>

      <div class="page-footer__bottom">
        <div class="footer-bottom-left">
          {{ page.footer_bottom_left ? page.footer_bottom_left : include('kingly_minimal:footer-copyright', {
            text: 'Â© [year] Copyright: example.com'
          }) }}
        </div>
        <div class="footer-bottom-right">
          {{ page.footer_bottom_right ? page.footer_bottom_right : include('kingly_minimal:footer-utility-links', {
            links: [
              { text: 'Contact', url: '/contact' }
            ],
            show_theme_toggle: true
          }) }}
        </div>
      </div>

    </div>
  </footer>
  {# End Footer Section #}

</div>{# /.layout-container #}
