{#
/**
 * @file
 * Theme override to display a single page.
 *
 * This template has been updated for a more robust CSS grid layout.
 * Key changes include moving the breadcrumbs outside the <main> element
 * and using more consistent, BEM-style classes for region wrappers.
 *
 * @see kingly_minimal/scss/layout/page.scss
 */
#}
<div class="layout-container">

  <header class="page-header" role="banner">
    {% if page.branding %}
      <div class="page-header__branding">
        {{ page.branding }}
      </div>
    {% endif %}
    {% if page.main_navigation %}
      <div class="page-header__menu">
        {{ page.main_navigation }}
      </div>
    {% endif %}
  </header>

  {#
  The breadcrumbs are now placed between the header and main content.
  The .region-breadcrumbs class is the direct target for the full-bleed CSS rule.
  #}
  {% if page.breadcrumbs %}
    <div class="region-breadcrumbs">
      {{ page.breadcrumbs }}
    </div>
  {% endif %}

  <main id="main-content" class="main-content" role="main">
    {# A skip-link target for accessibility. #}
    <a id="main-content-target" tabindex="-1"></a>

    {% if page.page_title %}
      {# The page title is a direct child of the main-content grid. #}
      {{ page.page_title }}
    {% endif %}

    {% if page.system_messages %}
      <div class="main-content__region system-messages-region">
        {{ page.system_messages }}
      </div>
    {% endif %}

    {% if page.tabs %}
      <div class="main-content__region tabs-region">
        {{ page.tabs }}
      </div>
    {% endif %}

    {% if page.content_top %}
      <div class="main-content__region content-top-region">
        {{ page.content_top }}
      </div>
    {% endif %}

    {# The main content from Drupal (e.g., node content). #}
    <div class="main-content__region content-main-region">
      {{ page.content }}
    </div>

    {% if page.content_bottom %}
      <div class="main-content__region content-bottom-region">
        {{ page.content_bottom }}
      </div>
    {% endif %}
  </main>

  {% if page.footer_top or page.footer_first or page.footer_second or page.footer_third or page.footer_fourth or page.footer_bottom %}
    <footer class="page-footer" role="contentinfo">
      <div class="page-footer__inner">
        {% if page.footer_top %}
          <div class="page-footer__top">
            {{ page.footer_top }}
          </div>
        {% endif %}

        {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
          <div class="page-footer__columns">
            {% if page.footer_first %}
              <div class="page-footer__column footer-first">
                {{ page.footer_first }}
              </div>
            {% endif %}
            {% if page.footer_second %}
              <div class="page-footer__column footer-second">
                {{ page.footer_second }}
              </div>
            {% endif %}
            {% if page.footer_third %}
              <div class="page-footer__column footer-third">
                {{ page.footer_third }}
              </div>
            {% endif %}
            {% if page.footer_fourth %}
              <div class="page-footer__column footer-fourth">
                {{ page.footer_fourth }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if page.footer_bottom %}
          <div class="page-footer__bottom">
            {{ page.footer_bottom }}
          </div>
        {% endif %}
      </div>
    </footer>
  {% endif %}

</div>{# /.layout-container #}
