{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * This template replaces the default ordered list (<ol>) with an unordered
 * list (<ul>) to remove the numbers. It also applies BEM-style classes for
 * easier styling and better semantics.
 *
 * Available variables:
 * - breadcrumb: A list of breadcrumb items. Each item contains:
 *   - text: The text of the link.
 *   - url: The URL of the link.
 * - attributes: HTML attributes for the nav element.
 */
#}
{% if breadcrumb %}
  <nav class="breadcrumb-nav" role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ul{{ attributes.addClass('breadcrumb') }}>
      {% for item in breadcrumb %}
        <li class="breadcrumb__item">
          {% if item.url %}
            <a href="{{ item.url }}" class="breadcrumb__link">{{ item.text }}</a>
          {% else %}
            {{ item.text }}
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
