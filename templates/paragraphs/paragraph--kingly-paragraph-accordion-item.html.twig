{#
/**
 * @file
 * Theme override for the Accordion Item paragraph.
 *
 * This template acts as a bridge, mapping the paragraph's fields to the
 * slots of the 'kingly_minimal:accordion-item' Single Directory Component.
 *
 * It now passes the raw `.value` of the content field and applies the `|raw`
 * filter to ensure HTML is rendered correctly.
 *
 * @see kingly_minimal/components/accordion-item/accordion-item.twig
 */
#}
{% embed 'kingly_minimal:accordion-item' with {
  attributes: attributes,
} %}

  {% block heading %}
    {# The heading is a simple string, so `content.` is fine and safe. #}
    {{ content.field_kingly_accordion_heading }}
  {% endblock %}

  {% block content %}
    {#
    CORRECTION: Apply the `|raw` filter to the field's value.
    This tells Twig to render the HTML tags instead of escaping them.
    #}
    {{ paragraph.field_kingly_accordion_content.value|raw }}
  {% endblock %}

{% endembed %}
