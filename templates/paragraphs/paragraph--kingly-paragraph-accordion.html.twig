{#
/**
 * @file
 * Theme override for the Accordion container paragraph.
 *
 * This template acts as a bridge, wrapping the rendered accordion items
 * (which are contained in the `content` variable) in the
 * 'kingly_minimal:accordion' Single Directory Component.
 *
 * @see kingly_minimal/components/accordion/accordion.twig
 */
#}
{% embed 'kingly_minimal:accordion' with {
  attributes: attributes,
} %}
  {% block content %}
    {#
    This renders the child paragraphs (the accordion items).
    We will control the wrappers around these items using a specific
    field.html.twig template override.
    #}
    {{ content }}
  {% endblock %}
{% endembed %}
