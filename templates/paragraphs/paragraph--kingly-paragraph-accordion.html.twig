{#
/**
 * @file
 * Theme override for the Accordion paragraph type.
 *
 * This template acts as a bridge, mapping the paragraph's fields to the
 * slots of the 'kingly_sdc:accordion' Single Directory Component.
 *
 * Available variables:
 * - paragraph: The paragraph entity.
 * - content: All paragraph items. Preprocessed.
 * - attributes: HTML attributes for the wrapper.
 * - DDC variables can be found at the top of paragraph.html.twig.
 */
#}
{% embed 'kingly_sdc:accordion' with {
  attributes: attributes,
} %}

  {% block heading %}
    {{ content.field_kingly_accordion_heading }}
  {% endblock %}

  {% block content %}
    {{ content.field_kingly_accordion_content }}
  {% endblock %}

{% endembed %}
