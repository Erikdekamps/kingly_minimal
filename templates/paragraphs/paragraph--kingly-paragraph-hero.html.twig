{#
/**
 * @file
 * Theme override for the Kingly Hero paragraph type.
 *
 * This template acts as a bridge, mapping the paragraph's field data
 * directly to the props of the 'kingly_minimal:hero' SDC. This data-driven
 * approach bypasses intermediate field templates for the cleanest possible markup.
 *
 * @see kingly_minimal/components/hero/hero.twig
 */
#}
{% set cta_item = paragraph.field_hero_cta|first %}

{%
  set hero_props = {
  'attributes': attributes.addClass('paragraph--type--hero'),
  'background_image': content.field_hero_background_image,
  'title': paragraph.field_hero_title.value,
  'subtitle': paragraph.field_hero_subtitle.value,
  'height': paragraph.field_hero_height.value,
  'cta_link': {
    'url': cta_item ? cta_item.url,
    'text': cta_item ? cta_item.title,
  },
}
%}

{{ include('kingly_minimal:hero', hero_props, with_context=false) }}
