{#
/**
 * @file
 * Theme override for the Slideshow container paragraph.
 *
 * This template has been refactored to directly loop over the referenced
 * slide paragraph entities. This completely bypasses Drupal's field rendering
 * system for 'field_slideshow_slides', guaranteeing that no extra div wrappers
 * are inserted between the Splide <ul> and <li> elements.
 *
 * This is the definitive fix for ensuring the correct DOM structure.
 *
 * @see kingly_minimal/components/slideshow/slideshow.twig
 */
#}
{% embed 'kingly_minimal:slideshow' with {
  attributes: attributes,
  uuid: paragraph.id(),
  title: paragraph.field_slideshow_title.value,
  columns_mobile: paragraph.field_slideshow_columns_mobile.value,
  columns_tablet: paragraph.field_slideshow_columns_tablet.value,
  columns_desktop: paragraph.field_slideshow_columns_desktop.value,
} %}

  {% block content %}
    {#
    Instead of rendering `content.field_slideshow_slides`, we now iterate
    through the paragraph's raw field items. For each item, we load the
    paragraph entity and render it using the 'default' view mode.
    This ensures each slide is rendered via its own paragraph template, but
    without any of the parent field's wrappers.
    #}
    {% for item in paragraph.field_slideshow_slides %}
      {{ drupal_entity('paragraph', item.target_id, 'default') }}
    {% endfor %}
  {% endblock %}

{% endembed %}
