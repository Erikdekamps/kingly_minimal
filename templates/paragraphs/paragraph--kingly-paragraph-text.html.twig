{#
/**
 * @file
 * Theme override for the Text paragraph type.
 *
 * This template acts as a bridge, mapping the paragraph's text field into the
 * 'content' slot of the 'kingly_minimal:text' Single Directory Component.
 *
 * Available variables:
 * - paragraph: The paragraph entity.
 * - content: All paragraph items. Preprocessed.
 * - attributes: HTML attributes for the wrapper.
 * - All DDC variables are available.
 */
#}
{% embed 'kingly_minimal:text' with {
  attributes: attributes,
} %}

  {% block content %}
    {{ content.field_kingly_text }}
  {% endblock %}

{% endembed %}
