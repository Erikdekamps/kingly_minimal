{#
/**
 * @file
 * Theme override for a main views template.
 *
 * This template has been refactored to act as a bridge to the generic
 * `views-view` Single Directory Component. It maps the variables from the theme
 * system to the props expected by the component.
 *
 * @see kingly_minimal/components/views-view/views-view.twig
 */
#}
{%
  set view_classes = [
  'view',
  'view-' ~ id()|clean_class,
  'view-id-' ~ id()|clean_class,
  'view-display-id-' ~ display_id,
  dom_id ? 'js-view-dom-id-' ~ dom_id,
]
%}

{{ include('kingly_minimal:views-view', {
  title: title,
  header: header,
  footer: footer,
  rows: rows,
  empty: empty,
  pager: pager,
  exposed: exposed,
  more: more,
  feed_icons: feed_icons,
  attachment_before: attachment_before,
  attachment_after: attachment_after,
  attributes: attributes.addClass(view_classes),
  title_prefix: title_prefix,
  title_suffix: title_suffix,
}, with_context = false) }}
